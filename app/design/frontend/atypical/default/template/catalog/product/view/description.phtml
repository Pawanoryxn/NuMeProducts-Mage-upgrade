/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>
<div class="ac-container">
    <div>
        <input id="ac-1" name="accordion-1" type="radio" />
        <label for="ac-1" id="lbl_1" onclick="showhidediv('ac-1');"><?php echo $this->__('Details') ?></label>
        <article class="ac-medium" id="cont1">
            <p><?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?></p>
        </article>
    </div>
    <div>
        <input id="ac-2" name="accordion-2" type="radio" />
        <label for="ac-2" id="lbl_2" onclick="showhidediv('ac-2');"> Additional Info</label>
        <article class="ac-medium" id="cont2">
            <p><?php echo $this->getLayout()->createBlock('catalog/product_view_attributes', '', array('template'=> 'catalog/product/view/attributes.phtml'))->toHtml(); ?></p>
        </article>
    </div>
</div>
<?php endif; ?>
<script type="text/javascript">
	function showhidediv(ra){
		if(ra=='ac-1'){
			if(document.getElementById('cont1').style.display == 'block'){
				document.getElementById('cont1').style.display = 'none';
				document.getElementById('lbl_1').className = 'removeselected';
			}else{
				document.getElementById('cont1').style.display = 'block';
				document.getElementById('lbl_1').className = 'selected';
				
			}
		}else if(ra=='ac-2'){
			if(document.getElementById('cont2').style.display == 'block'){
				document.getElementById('cont2').style.display = 'none';
				document.getElementById('lbl_2').className = 'removeselected';
			}else{
				document.getElementById('cont2').style.display = 'block';
				document.getElementById('lbl_2').className = 'selected';
			}
		}
	}
</script>