    <checkout_onepage_success>
        <reference name="head">
            <action method="addCss"><path>betterthankyoupage/styles.css</path></action>
        </reference>
        <reference name="checkout.success">
            <block type="betterthankyoupage/sectionOrderinformation" name="section_order_information" as="section_order_information" template="betterthankyoupage/section_order_information.phtml" />
            <block type="betterthankyoupage/sectionSocialsharingbar" name="section_social_sharing_bar" as="section_social_sharing_bar" template="betterthankyoupage/section_social_sharing_bar.phtml" />
