            <block type="betterthankyoupage/sectionNewslettersubscription" name="section_newsletter_subscription" as="section_newsletter_subscription" template="betterthankyoupage/section_newsletter_subscription.phtml" />
            
            <action method="addSectionBlock"><blockAlias>section_order_information</blockAlias></action>
            <action method="addSectionBlock"><blockAlias>section_social_sharing_bar</blockAlias></action>
            <action method="addSectionBlock"><blockAlias>section_cms_block</blockAlias></action>
            <action method="addSectionBlock"><blockAlias>section_cross_sells</blockAlias></action>
            <action method="addSectionBlock"><blockAlias>section_newsletter_subscription</blockAlias></action>
        </reference>
    </checkout_onepage_success>
    
